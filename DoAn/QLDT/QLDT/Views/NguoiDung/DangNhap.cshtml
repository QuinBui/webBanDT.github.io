
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}
<style>
    .a{
        font-size:20px;
        text-decoration:none;
    }
</style>
<br /><br />
      <center class="a">
          <h2 style="color:orange; font-weight:bold;font-size:30px">ĐĂNG NHẬP</h2>
          <table class="table" style="width:40%;">
              @using (Html.BeginForm())
              {
                  @Html.ValidationSummary(true)
                  <tr>
                      <td style="text-align:right;">Tên Đăng nhập: </td>
                      <td><input type="text" name="TenDN" class="form-control" /> @ViewData["Loi1"] </td>
                  </tr>
                  <tr>
                      <td style="text-align:right;">Mật Khẩu: </td>
                      <td><input type="password" name="Matkhau" class="form-control" />@ViewData["Loi2"]</td>
                  </tr>
                  <tr>
                      <td colspan="2" style="text-align:center"><input type="submit" value="ĐĂNG NHẬP" class="btn btn-outline-warning" /></td>
                  </tr>
                  <tr style="color:red;font-size:20px">
                      @ViewData["Loi3"]
                  </tr>
              }

          </table>
          <a href="@Url.Action("DangKy", "NguoiDung")" style="text-decoration:none">Đăng ký thành viên ?</a>
          @*@Html.ActionLink("Đăng ký thành viên", "DangKy", "NguoiDung")*@
      </center>
